.wrapper.lter.b-b
  .panel.panel-info
    .panel-heading.font-bold Просмотр Работы
    .panel-body
      .row
        .col-md-12.col-sm-12.col-xs-12
          .x_content
            .form-horizontal.form-label-left(id="news-form")
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Тема диссертации
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(ng-model='view.document.theme_id', ng-options='item._id as item.name for item in view.themes | filter:{name_ru:search}')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Ключевые слова
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.keys_word')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Объект исследования
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.object')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Предметом  исследования
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.subject')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Целью  исследования
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.goal')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Методы исследования
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.methods')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Полученые результаты
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.results')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Степень использования
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.degreeofuse')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Область применения
                .col-md-8.col-sm-8.col-xs-12
                  span.form-control(rows='5', ng-model='view.document.applicationarea')
              .form-group
                label.control-label.col-md-2.col-sm-2.col-xs-12 Полный файл диссертации
                .col-md-8.col-sm-8.col-xs-12
                  div
                    file-load(file-src='view.document.files', type='dic_work', allow="pdf,word,zip")
