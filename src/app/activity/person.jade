vak-header
.container#body
  .wrapper.lter.b-b
    .panel.panel-info
      .panel-heading.font-bold Личные данные
        .panel-body
          .wrapper

              table.table.table-bordered
                tbody
                  tr
                    td Имя пользователя (Логин):
                    td {{person.person.username}}
                  tr
                    td Фамилия:
                    td {{person.person.last_name}}
                  tr
                    td Имя:
                    td {{person.person.first_name}}
                  tr
                    td Отчество
                    td {{person.person.middle_name}}
                  tr
                    td Дата рождения
                    td {{person.person.birthday | amDateFormat: 'Do MMM YYYY'}}
                  tr
                    td Место рождения
                    td {{person.person.birthplace}}
                  tr
                    td Национальность
                    td {{person.person.nationality_id}}
           .panel-heading.font-bold Ученое звание
                  table.table.table-bordered
                        tr(style='font-weight: bold')
                          td(style='width:15%') Звание
                          td(style='width:20%') Специальность
                          td(style='width:20%') Дата
                        tr(ng-repeat='rank in person.ranks | orderBy:"-date"')
                          td
                            | {{ rank.scientistrank.name_ru }}
                          td
                            | {{ rank.specialtyrank.name_ru }}

                          td
                            | {{ rank.date | amDateFormat:"MMM YYYY" }}
          .panel-heading.font-bold Ученая степень
            table.table.table-bordered
              tr(style='font-weight: bold')
                td(style='width:15%') Степень
                td(style='width:20%') Шифр
                td(style='width:15%') Отрасль науки
                td(style='width:20%') Дата
              tr(ng-repeat='degree in person.degrees | orderBy:"-date"')
                td
                  | {{ degree.academicdegree.name_ru }}
                td
                  span(ng-repeat='spec in degree.degreespeciality')
                    span {{ spec.specialty.code }}
                td
                  span(ng-repeat='spec in degree.degreespeciality')
                    span {{ spec.specialty.name_ru }}
                td
                  span(ng-repeat='spec in degree.degreespeciality')
                    span {{ spec.userdegree.action_date | amDateFormat:"Do MMM YYYY"}}


        button.btn.btn-default(type="button", ui-sref='view') {{ 'BACK_BUTTON_LABEL' | translate}}



