.container
  .row
    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          h2 {{ 'REGULATIONS_CREATE_LABEL' | translate}}
          .clearfix
        .x_content
          form.form-horizontal.form-label-left(id="regulations-form")
            .form-group
              label.control-label.col-md-3.col-sm-3.col-xs-12 Раздел
              .col-md-6.col-sm-6.col-xs-12
                select.form-control(ng-model='form.regulationsItem.departmentdocument_id', ng-options='name._id as name.name_ru for name in form.departments | filter:{name_ru:search}')
            .form-group
              label.control-label.col-md-3.col-sm-3.col-xs-12 {{ 'NAME_RU_SPAN_LABEL' | translate}}
                span.required *
              .col-md-6.col-sm-6.col-xs-12
                input.form-control.col-md-7.col-xs-12(type="text", id="name_ru", name="name_ru", required="required", ng-model="form.regulationsItem.name_ru")
            .form-group
              label.control-label.col-md-3.col-sm-3.col-xs-12 {{ 'NAME_KG_SPAN_LABEL' | translate}}
                span.required *
              .col-md-6.col-sm-6.col-xs-12
                input.form-control.col-md-7.col-xs-12(type="text", id="name_kg", name="name_kg", required="required", ng-model="form.regulationsItem.name_kg")
            .form-group
              label.control-label.col-md-3.col-sm-3.col-xs-12 {{ 'FILE_LABEL' | translate}}
                span.required *
              .col-md-6.col-sm-6.col-xs-12
                //input(type="file", flow-btn)
                file-load(file-src='form.regulationsItem.file', type='regulations', allow="pdf,word")
            .form-group
              .col-md-6.col-sm-6.col-xs-12.col-md-offset-3
                button.btn.btn-default(type="button", ng-click="form.goBack()") {{ 'CANCEL_BUTTON_LABEL' | translate}}
                button.btn.btn-primary(type="button", ng-click="form.saveRegulations()") {{ 'SAVE_BUTTON_LABEL' | translate}}



