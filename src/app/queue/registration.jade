.wrapper.lter
.row
  .col-md-12
    .row
      .col-sm-12.col-md-12.col-lg-12
        .panel.b-a
          .bg-info.dk.no-border.wrapper-lg
          .text-center.m-b.clearfix
            .thumb-lg.avatar.m-t-n-xxl
              img.b.b-3x.b-white(ng-src="{{app.api}}{{registration.document.user.data.image}}")
              .h4.font-thin.m-t-sm {{registration.document.user.last_name}} {{registration.document.user.first_name}}
          .padder-v.b-t.b-light.bg-light.lter.row.text-center.no-gutter
            .col-xs-4
              div Степень
              .inline.m-t-sm
                div.padder-v
                  span.step {{registration.document.theme[0].academicdegree.name_ru}}
            .col-xs-4
              div Специальность
              .inline.m-t-sm
                div.padder-v
                  span.step {{registration.document.theme[0].specialty.code}} {{registration.document.theme[0].specialty.name_ru}}
            .col-xs-4
              div Отрасль
              .inline.m-t-sm
                div.padder-v
                  span.step {{registration.document.theme[0].branchesofscience.code}} {{registration.document.theme[0].branchesofscience.name_ru}}
          .hbox.text-center.b-t.b-light
            a.col.padder-v.text-muted.b-r.b-light(href='')
              .h4 Диссертационная работа:
            a.col.padder-v(ng-href="{{app.api}}{{registration.document.document.files}}" target="_blank")
              .h5 {{registration.document.theme[0].name}}
          .hbox.text-center.b-t.b-light
            .form-horizontal.form-label-left(id="news-form")
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Ключевые слова
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.keys_word}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Объект исследования
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.object}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Предметом  исследования
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.subject}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Целью  исследования
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.goal}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Методы исследования
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.methods}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Полученые результаты
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.results}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Степень использования
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.degreeofuse}}
              .form-group.b-t.padder-v
                label.control-label.col-md-4.col-sm-4.col-xs-12 Область применения
                .col-md-8.col-sm-8.col-xs-12
                  span {{registration.document.document.applicationarea}}

.wrapper
  .form-horizontal.form-label-left
    .form-group
      label.control-label.col-md-3.col-sm-3.col-xs-12 Дата регистрации
      .col-md-8.col-sm-8.col-xs-12
        .input-group.no-margin
          input.form-control(type="text" uib-datepicker-popup min-date="registration.today"
          ng-disabled="true" ng-click="registration.search.popup_to_date.opened=true"
          ng-model="registration.today" is-open="registration.search.popup_to_date.opened", close-text="Закрыть",
          current-text='Сегодня', clear-text='Очистить')
          span.input-group-btn
            button.btn.btn-default(type="button" ng-click="registration.search.popup_to_date.opened=true")
              i.glyphicon.glyphicon-calendar
    .form-group
      label.control-label.col-md-3.col-sm-3.col-xs-12 Комментарии
      .col-md-8.col-sm-8.col-xs-12
        textarea.form-control(rows='5', ng-model='registration.document.data.reg.comment')
    button.btn.btn-default.btn-sm(ng-click="registration.saveRegistration()", ng-disabled="registration.document.status != 'new'")
      span Зарегистрировать




